            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Gönderi Sayısı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                               @Model.UserPostList.Count
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Yorum Sayısı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                               @Model.CommentList.Count
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Faydalı Yorum Sayısı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.TrueComment
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Katılış Tarihi</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserList.CreatedTime
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">En Son Giriş</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                               @Model.UserList.LastLogin
                            </div>
                        </div>
                        <hr>
                        
                    </div>
                </div>

                <div class="row gutters-sm">
                    

                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">assignment</i>Gönderiler</h6>


                     

                             

                              <ol role="list">
                                  @foreach (Post PostItem in Model.UserPostList)
                                      {
                                      <li>
                                        
                                          <a href="/Home/Postdetails/@PostItem.Id">
                                              <h3>@if (PostItem.Description.Length > 50)
                                                  {@PostItem.Description.Substring(0, 49) @Html.Raw("...")}
                                                  else {@PostItem.Description }</h3>
                                          </a>
                                              <div class="message-box info">
                                                  @{
                                                      int CommentCount = 0;
                                                      foreach (Comment postcom in Model.CommentList)
                                                      {
                                                          if (postcom.PostId == PostItem.Id)
                                                          {
                                                              CommentCount++;
                                                          }
                                                      }
                                                      @CommentCount.ToString() @Html.Raw(" Adet Yorum");
                                                  } | <i class="fa-solid fa-layer-group"></i><i class="fa-solid fa-list-tree"></i>@foreach (Category cateogry in Model.CategoryList) { if (cateogry.Id == PostItem.CategoryId) {@cateogry.Name } }
                                                  | <i class="fa-solid fa-file-lines"></i> @foreach (AdiNeydiProject.DAL.Type type in Model.TypeList) { if (type.Id == PostItem.TypeId) {@type.Name }  }| @PostItem.CreatedTime

                                            </div>


                                            </li>





                                      }
                                  </ol>


                       
                        </div>
                  
                       
                      
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">assignment</i>Yapılan Yorumlar</h6>
                                <ol role="list">
                                    @foreach (Comment commentItem in Model.CommentList)
                                    {
                                       
                                        <li>

                                            <p style="text-align:left;">@if (commentItem.Text.Length > 50)
                                                  {@commentItem.Text.Substring(0, 49) @Html.Raw("...")}
                                                  else {@commentItem.Text}</p>
                                            <div class="message-box info">
                                                <a href="/Home/Postdetails/@commentItem.PostId" > <i  class="fa-solid fa-signs-post"> </i>GÖNDERİYE GİT</a> | <i class="fa-solid fa-calendar-days"></i>15.20.54
                                            </div>
                                        </li>
                                    }
                                </ol>

                            </div>
                       
                   
                </div>



            </div>
